%h1 My Recipes

.add
  = link_to 'New Recipe', new_user_recipe_path(@user), class: 'button'
  %i.icon-plus-sign

.featured
  %h3 Featured Recipes
  %span.loading
    Loading featured recipesâ€¦&nbsp;
    = image_tag 'ajax-loader.gif'
  %ul#featured_recipes


%table#tablesorter.recipes
  %thead
    %tr.top
      %th Name
      %th Original Source
      %th Season
      %th Course
      %th.sorter-false Edit Recipe
      %th.sorter-false Delete Recipe

  - @user.recipes.each do |recipe|
    %tr
      %td= link_to recipe.name, user_recipe_path(@user.id, recipe)
      %td= link_to recipe.source, ("http://" + recipe.link)
      %td= recipe.season
      %td= recipe.course
      %td.button
        .button
          = link_to 'Edit', edit_user_recipe_path(@user.id, recipe)
          %i.icon-edit
      %td.button
        .button
          = link_to 'Delete', ([@user, recipe]), :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'button'
          %i.icon-trash


.add
  = link_to 'New Recipe', new_user_recipe_path(@user.id), class: 'button'
  %i.icon-plus-sign

